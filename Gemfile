source :rubygems

# Specify your gem's dependencies in smailer.gemspec
gemspec

gem "rails", ">= 3.0.0"

group :development do
  gem 'sqlite3'

  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-spork'
  gem 'guard-rails'
  gem 'guard-rspec'
end

group :test do
  gem 'spork'

  gem 'rspec'
  gem 'rspec-rails'

  gem 'shoulda-matchers'
  gem 'database_cleaner'
end
